<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.url">jdbc:hsqldb:file:/tmp/db</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">1000</property>
        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>
        <!-- Set the current session context -->
        <property name="current_session_context_class">thread</property>
        <!-- Drop and re-create the database schema on startup -->
        <property name="hbm2ddl.auto">create-drop</property>
        <!-- dbcp connection pool configuration -->
        <property name="hibernate.dbcp.initialSize">5</property>
        <property name="hibernate.dbcp.maxTotal">20</property>
        <property name="hibernate.dbcp.maxIdle">10</property>
        <property name="hibernate.dbcp.minIdle">5</property>
        <property name="hibernate.dbcp.maxWaitMillis">-1</property>
        <!-- Mapping for User entity -->
        <mapping class="tukano.api.User" />
        <!-- Mapping for Short entity -->
        <mapping class="tukano.api.Short" />
        <!-- Mapping for Follow entity -->
        <mapping class="tukano.api.Follow" />
        <!-- Mapping for FollowID entity -->
        <mapping class="tukano.api.FollowID" />
        <!-- Mapping for ShortLike entity -->
        <mapping class="tukano.api.ShortLike" />
        <!-- Mapping for ShortLikeID entity -->
        <mapping class="tukano.api.ShortLikeID" />
        <!-- Mapping for Verifier entity -->
        <mapping class="tukano.api.Verifier" />
        <!-- Mapping for VerifierID entity -->
        <mapping class="tukano.api.VerifierID" />
    </session-factory>
</hibernate-configuration>
